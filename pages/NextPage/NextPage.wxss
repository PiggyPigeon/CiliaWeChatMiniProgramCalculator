

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #b797d1;
}

.scroll-view {
  flex: 1;
  width: 90%; 
  min-height: 200rpx; 
  padding-bottom: 30rpx; 
}


.tabs {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}

.tab {
  width: 180rpx; 
  height: 180rpx; 
  line-height: 60rpx; 
  text-align: center;
  border: 1px solid #b797d1;
  margin: 50rpx;
  border-radius: 50%; 
  display: flex;
  justify-content: center;
  align-items: center; 
  color: #5A315D;
  background-color: #fdeeaf;
}

.tab.active {
  background-color: #5A315D; 
  color: #fdeeaf; 
}


.new-lens-button {
  background-color: #5A315D; 
  color: #fdeeaf;
  padding: 10rpx 20rpx;
  border: none;
  border-radius: 5rpx;
  margin: 20rpx auto;
  display: block; 
  text-align: center;
}