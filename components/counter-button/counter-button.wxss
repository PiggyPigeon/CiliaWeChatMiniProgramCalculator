/* components/counter-button/counter-button.wxss */

.lens-container {
  border: 3px solid #5A315D;
  padding: 30rpx;
  margin: 5rpx;
  margin-bottom: 20rpx;
  border-radius: 10%; 
}

.lens-header {
  display: flex;
  justify-content: space-between;
  color: #5A315D;
}

.lens-label {
  display: flex;
  justify-content: center;
  color: #5A315D;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-weight: 600;
}

.toggle-arrow {
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
  color: #5A315D;
  align-items: center;
}



.BFK-row {
  display: flex;
  justify-content: center;
  padding: 10rpx;
  align-items: center;
}

.bfk-label {
  color: #5A315D;
}

.bfk-input {
  border: 1px solid #5A315D; 
  padding: 5rpx 10rpx;    
  border-radius: 15rpx;   
  margin: 0 auto;
  color: #5A315D; 
  background-color: #fdeeaf;
}


.customer-comfort-section {
  margin-top: 10rpx; 
  text-align: center;
}

.customer-feedback-label {
  text-align: center; 
  width: 80%;
  margin-bottom: 5rpx; 
  color: #5A315D;
}

.picker-view {
  display: block;
  width: 90%;
  height: 60rpx; 
  border: 1px solid #5A315D; 
  border-radius: 10rpx;
  padding: 10rpx;
  background-color: #fdeeaf;
  color: #5A315D;
  text-align: center;
  line-height: 60rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}

.picker-view::after {
  content: '\25BC'; 
  float: right;
  margin-right: 10rpx;
  color: #5A315D;
}

.concernTabs {
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
  color: #5A315D;
  align-items: center;
}

.concernTab {
  width: 210rpx; 
  height: 70rpx; 
  line-height: 40rpx; 
  text-align: center;
  border: 1px solid #5A315D;
  margin: 5rpx;
  padding: 5rpx;
  border-radius: 25%; 
  display: flex;
  justify-content: center;
  align-items: center; 
  color: #5A315D;
  background-color: #fdeeaf;
}

.concernTab.active {
  background-color: #5A315D; 
  color: #fdeeaf; 
}

.radio-container {
 display: flex;
 flex-direction: column;
  padding: 25rpx 10rpx;
  color: #5A315D;
}

.radio-row {
  margin-bottom: 25rpx;
}

radio-group {
  display: flex; 
}

.radio-label {
  flex: 1; 
  display: flex; 
  align-items: center; 
  margin-right: 10rpx; 
}

.checkbox-container{
  display: flex;
  padding: 20rpx 10rpx;
  color: #5A315D;
  justify-content: space-around;
}

.checkbox-label {
  flex: 1; 
  display: flex; 
  justify-content: center;
  margin-right: 8rpx; 
}



.pooling-locations-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pooling-label {
  color: #5A315D;
  font-weight: 500;
  font-size: large;
  margin-bottom: 10px; /* Space between the label and the checkboxes */
}

checkbox-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around; /* Adjusts the spacing around the checkboxes */
  max-width: 100%; /* Ensure the group doesn't exceed the container width */
  margin-bottom: 25rpx;
}

.pooling-location-buttons {
  width: 25%;
  box-sizing: border-box;
  padding: 1px;
  display: flex;
  justify-content: center;
  margin-bottom: 8rpx;
  color: #5A315D;/* Vertically center the checkbox and its label */
}


.deviation-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.deviation-radio-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  max-width: 100%;
}

.deviation-buttons {
  width: 25%;
  box-sizing: border-box;
  padding: 1px;
  display: flex;
  justify-content: center;
  margin-bottom: 8rpx;
  color: #5A315D;
}

.deviation-label {
  color: #5A315D;
  font-weight: 500;
  font-size: large;
  margin-bottom: 5px; 
}

.AC-tabs-container {
  display: flex;
  flex-direction: row; 
  justify-content: space-evenly; 
  align-items: center;
}

.ACpoolingTab {
  width: 70rpx;
  height: 70rpx;
  line-height: 40rpx;
  text-align: center;
  font-weight: 600;
  border: 1px solid #5A315D;
  margin: 5rpx;
  padding: 6rpx;
  border-radius: 55%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #5A315D;
  background-color: #fdeeaf;
}

.ACpoolingTab.active {
  background-color: #5A315D;
  color: #fdeeaf;
}


.horizontal-line {
  height: 2px;
  background-color: #5A315D; 
  margin: 15px 0; 
}

.notes-section {
  margin-top: 10rpx; 
  text-align: center;
}
.notes-label {
  text-align: center; 
  width: 80%;
  margin-bottom: 5rpx; 
  color: #5A315D;
  font-weight: 500;
}
.notes-input {
  width: 90%; 
  height: 100rpx; 
  border: 1px solid #5A315D; 
  border-radius: 10rpx; 
  padding: 10rpx; 
  text-align: center;
  margin: 0 auto;
  color: #5A315D; 
  background-color: #fdeeaf;
}

